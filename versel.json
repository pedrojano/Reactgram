{
    "version": 2,
    "builds": [
        {
            "src": "back-end/api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "back-end/routes/**",
                    "back-end/controllers/**",
                    "back-end/models/**",
                    "back-end/config/**",
                    "back-end/middlewares/**"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "back-end/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "installCommand": "npm install --prefix back-end && npm install --prefix frontend",
    "buildCommand": "npm run build --prefix frontend"
}